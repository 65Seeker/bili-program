.video-info {
    margin-top: 10rpx;
}

.video-info video {
    width: 100%;
}

.video-title {
    display: flex;
    justify-content: space-between;
    font-size: 35rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.video-detail {
    margin-top: 10rpx;
    font-size: 28rpx;
    margin-left: 10rpx;
    color: #adadad;
}

.video-detail text {
    margin-right: 15rpx;
}

#author {
    color: #000;
    margin-right: 50rpx;
}

.other-list {
    margin-top: 20rpx;
}

.item-other {
    display: flex;
    justify-content: space-between;
    padding-top: 20rpx;
    padding-bottom: 10rpx;
    border-top: #dfdfdf 1rpx solid;
}

.other-img-wrap {
    width: 30%;
}

.other-img-wrap image {
    width: 280rpx;
    border-radius: 15rpx;
}

.other-info {
    width: 60%;
}

.other-title {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: clip;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-right: 30rpx;
}

.other-detail {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #adadad;

}

.play-count {
    margin-right: 9rpx;
}